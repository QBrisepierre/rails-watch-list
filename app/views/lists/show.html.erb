<div class="position-relative">
  <img class="w-100 object-fit-cover" style="height: 400px" src="https://picsum.photos/1920/400" alt="">
  <h3><span class="position-absolute top-0 end-0 rounded translate-middle badge bg-warning mt-5 negative-margin"><%= @bookmarks.count %> Movies</span></h3>
</div>
<div class="container mt-3">
  
  <div class="d-flex justify-content-between mb-3">
    <h1><%= @list.name %></h1>
    <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "w-25 btn btn-success text-white" %>
  </div>

  <div class="row row-cols-2">
    <% @bookmarks.each do |bookmark| %>
      <div class="col">
        <div class="card mb-3">
          <%= image_tag bookmark.movie.poster_url, class: "card-img-top card-img-movie" %>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.comment %></p>
            <div class="d-flex justify-content-between">
              <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
              <%= link_to "delete", list_bookmark_path(@list, bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row mt-4 mb-5">
    <div class="col">
      <h2><%= @reviews.count %> Reviews</h2>
      <% @reviews.each do |review| %>
        <p><%= review.rating %></p>
        <p><%= review.comment %></p>
      <% end %>
    </div>
    <div class="col p-4 bg-white">
      <h1>Add your review</h1>
      <%= simple_form_for [@list, @review] do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating %>
        <%= f.submit "Create review", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  
</div>